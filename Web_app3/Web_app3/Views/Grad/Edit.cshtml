@model AutoServis.Models.Grad

<h2>Izmjena</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Grad" asp-area="">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" required
                               oninvalid="this.setCustomValidity('Naziv je obavezan!')"
                               oninput="this.setCustomValidity('')" class="form-control" />
            </div>

            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary">Sacuvaj</button>
            </div>
        </form>
    </div>
</div>
