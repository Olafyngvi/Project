@model AutoServis.Models.VrstaUposlenika

<h3>Da li ste sigurni da želite obrisati ovaj zapis ?</h3>
<div>
    <hr />
    <div class="form-group">
        <label>@Html.DisplayNameFor(model => model.Naziv)</label>
        <b style="margin-left:10px">@Html.DisplayFor(model => model.Naziv)</b>
    </div>
    
    <form asp-action="Delete" asp-controller="VrstaUposlenika" asp-area="">
        <input type="hidden" asp-for="Id" />
