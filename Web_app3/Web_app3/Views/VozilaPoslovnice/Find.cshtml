@model AutoServis.ViewModels.VozilaPoslovniceVM

<a asp-controller="VozilaPoslovnice"  asp-area="" asp-action="Index" class="btn btn-primary btn-sm">
    <span class="glyphicon glyphicon-arrow-left"></span>Nazad
</a>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table-condenseds" style="box-shadow: 0 4px 8px rgba(0,0,0,.08)" >
        <thead>
            <tr>
                <th>
                    Datum uvoza
                </th>
                <th>
                    Poslovnica
                </th>
                <th>
                    Šifra automobila
                </th>
                <th>
                    Marka
                </th>
                <th>
                    Model
                </th>

                <th>Akcije</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.vp)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatumUvoza)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Poslovnica.Naziv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VoziloProdaja.SifraAutomobila)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VoziloProdaja.Model.marka.Nazvi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VoziloProdaja.Model.Naziv)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.VozilaPoslovniceId" class="btn btn-primary btn-xs">Izmjeni</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

