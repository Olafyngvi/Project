@model AutoServis.Models.VozilaPoslovnice

<h3>Da li ste sigurni da želite obrisati ovaj zapis?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Datum uvoza
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DatumUvoza)
        </dd>
        <dt>
           Poslovnica
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Poslovnica.Naziv)
        </dd>
        <dt>
           Vozilo(datum proizvodnje)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.VoziloProdaja.DatumProizvodnje)
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-controller="VozilaPoslovnice" asp-area="">
        <input type="hidden" asp-for="VozilaPoslovniceId" />
        <input type="submit" value="Izbriši" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-default" >Nazad na listu</a>
    </form>
</div>
