@model AutoServis.Models.DioKategorija

<h4>Izmjena kategorije</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" required placeholder="Unesi naziv"
                       oninvalid="this.setCustomValidity('Naziv je obavezan!')"
                       oninput="this.setCustomValidity('')" class="form-control" />
            </div>
            <span class="thumb">
                @{
                    var base64 = Convert.ToBase64String(Model.Slika);
                    var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                }
                <img src="@imgsrc" width="120" height="120" alt="@Model.Naziv">
            </span>
            <div class="form-group">
                <br />
                <input type="file" id="files" asp-for="Slika" class="form-control" style="height:42px" />
                <span asp-validation-for="Slika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Izmjeni" class="btn btn-primary" />
            </div>
        </form>
        <a class="btn btn-danger btn-xs" asp-action="Delete" asp-route-id="@Model.Id">Obrisi</a>
    </div>
</div>