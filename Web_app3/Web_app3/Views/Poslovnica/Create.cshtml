@model AutoServis.Models.Poslovnica

<h2>Dodaj Poslovnicu</h2>
<hr />
<div class="row">
    <div class="col-md-4" style="box-shadow: 0 4px 8px rgba(0,0,0,.08)">
        <form asp-action="Create" asp-controller="Poslovnica" asp-area="">
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv"required
                               oninvalid="this.setCustomValidity('Naziv je obavezan!')"
                               oninput="this.setCustomValidity('')" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Adresa" class="control-label"></label>
                <input asp-for="Adresa" required
                               oninvalid="this.setCustomValidity('Adresa je obavezna!')"
                               oninput="this.setCustomValidity('')" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" required
                               oninvalid="this.setCustomValidity('Telefon je obavezan!')"
                               oninput="this.setCustomValidity('')" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Grad</label>
                <select style="height:40px" asp-for="GradId" required
                               oninvalid="this.setCustomValidity('Grad je obavezan!')"
                               oninput="this.setCustomValidity('')" class="form-control" asp-items="ViewBag.GradId"><option></option></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Sačuvaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



