@model AutoServis.ViewModels.ModelVM

<h2>Rezultati pretrage</h2>

<a asp-controller="Model" asp-action="Index" class="btn btn-primary btn-sm">
    <span class="glyphicon glyphicon-arrow-left"></span>

</a>

<table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th>
                Model
            </th>
            <th>
                Marka
            </th>
            <th>
                Akcije
            </th>
        </tr>

   </thead>
    @foreach(var item in Model.model)       
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.marka.Nazvi)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ModelId" class="btn btn-warning">Izmjeni</a> |
                    <a asp-action="Pregled" asp-route-id="@item.ModelId" class="btn btn-danger">Obrisi</a>
                </td>
            </tr>
        </tbody>

    }

</table>

