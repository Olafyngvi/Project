@model AutoServis.Models.Marka

<h3>Da li ste sigurni da želite obrisati ovu marku?</h3>
<div>
    <h4>Marka</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naziv
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nazvi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MarkaId" />
        <input type="submit" value="Izbriši" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-default">Nazad</a>
    </form>
</div>
