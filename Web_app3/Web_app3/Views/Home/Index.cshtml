@using AutoServis.Helper

@{
    Uposlenik username = Context.GetLogiraniKorisnik();
}
@if (username == null || username.VrstaUposlenikaId == 2)
{
    <div id="preloader">
        <div class="loader"></div>
    </div>
}
<div class="container-fluid">
    <div style=" display:inline-block">
        <div class="slideshow" style="width:800px; height:250px; display:inline-block">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/lib/logo/as3.jpg" style="height:250px;" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/lib/logo/as2.jpg" style="height:250px;" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/lib/logo/as1.jpg" style="height:250px;" alt="Third slide">
                    </div>
                </div>

            </div>

        </div>
    </div>
    <div class="col-sm-4" style="display:inline;float:right; ">
        <img src="~/lib/logo/lokacija2.jpg" style="border:2px solid #2E74AE" />
        <div style="width:71%;height:2px;background-color:#2E74AE;margin-bottom:0.6px;margin-top:10px;"></div>


        <h2 style="padding:7px 30px; box-sizing:border-box; background-color:#2E74AE;display:inline-block;color:#fff;">Kako do nas?</h2>




    </div>



    <div style="display:block">
        @await Component.InvokeAsync("HomeAuta")
    </div>
    <div style="display:block">
        @await Component.InvokeAsync("VozilaAkcija")
    </div>
    <div class="col-sm-4" style="display:inline;float:right; ">
        <img src="~/lib/logo/proba.png" style="margin-bottom:60px" />
        @*<div style="width:71%;height:2px;background-color:#2E74AE;margin-bottom:50px;margin-top:10px;"></div>*@
    </div>

</div>















