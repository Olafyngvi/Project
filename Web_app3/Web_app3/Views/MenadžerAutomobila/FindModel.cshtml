@model AutoServis.ViewModels.ModelVM

<h2>Rezultati pretrage</h2>



<table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th>
                Model
            </th>
            <th>
                Marka
            </th>
            <th>
                Akcije
            </th>
        </tr>

    </thead>
    @foreach (var item in Model.model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.marka.Nazvi)
                </td>
                <td>
                    <a  atribut="@item.ModelId" class="btn btn-warning BtnDetalji">Izmjeni</a>
                    
                </td>
            </tr>
        </tbody>

    }

</table>
<a id="BtnNazad" style="margin-left:10px" class="btn btn-default">Nazad na modele</a>
<script>
    $(".BtnDetalji").click(function (event) {

        var btn = $(this);
        var id = btn.attr("atribut");

        $.get("/MenadžerAutomobila/EditModel?id=" + id,
            function (rez, status) {
                $("#samko").html(rez);
            });

    });

    $("#BtnNazad").click(function (event) {




        $.get("/MenadžerAutomobila/IndexModel",
            function (rez, status) {

                $("#samko").html(rez);
            });

    });
</script>