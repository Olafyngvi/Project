<script>

    $("#BtnNazad").click(function (event) {

      


        $.get("/MenadžerAutomobila/Index",
            function (rez, status) {

                $("#samko").html(rez);
            });

    });


    $('form').submit(function (e) {


        toastr.options.positionClass = 'toast-top-left';
        toastr.options.timeOut = 40000;
