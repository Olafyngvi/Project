    <input type="hidden" asp-for="VoziloProdajaID" />
    <div class="row col-md-3">
        <h3>Vozilo</h3>
        <hr />
        <div class="form-group" style="width:100%">

            <span>Gorivo:</span> <select asp-for="GorivoID" style="height:35px; font-weight:bolder" class="form-control" asp-items="ViewBag.GorivoID"></select>
            <span asp-validation-for="GorivoID" class="text-danger"></span>
        </div>
        <div class="form-group" style="width:100%">
            <b><label asp-for="ModelID" class="control-label">Model:</label></b>
            <select asp-for="ModelID"  style="height:35px; font-weight:bolder" class="form-control" asp-items="ViewBag.ModelID"></select>
            <span asp-validation-for="ModelID" class="text-danger"></span>
        </div>
        <div class="form-group" style="width:100%">
            <b><label asp-for="TransmisijaID" class="control-label">Transmisija:</label></b>
