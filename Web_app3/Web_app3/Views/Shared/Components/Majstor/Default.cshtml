    .sidebar-menu, .sidebar-menu .glyphicon, .sidebar-menu .fa {
        width: 6%;
        font-size: 22px;
    }

        .sidebar-menu.collapsed {
            width: 12%;
        }

        .sidebar-menu li {
            margin-left: -25px;
        }

        .sidebar-menu .glyphicon {
            padding-right: 10px;
        }

        .sidebar-menu .fa {
            padding-right: 10px;
        }

        .sidebar-menu .tekst,
        .sidebar-menu .logoo {
            display: none;
        }

        .sidebar-menu.collapsed .tekst,
        .sidebar-menu.collapsed .logoo {
            display: inline-block;
        }

    .main-menu {
        width: 100%;
    }

    .sidebar-menu.collapsed .nav-label {
        display: none;
    }

    .sidebar-menu .nav-label {
        display: inline-block;
    }

    .glyphicon.collapsed {
        padding-right: 20px;
    }
