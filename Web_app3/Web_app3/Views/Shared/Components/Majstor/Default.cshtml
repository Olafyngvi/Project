<script>

    $(function () {
        $('.sidebar-menu').hover(function () {
            $(this).addClass('collapsed');
            $('.glyphicon').addClass('collapsed');
        },
            function () {
                $(this).removeClass('collapsed');
                $('.glyphicon').removeClass('collapsed');
            });
    });
</script>