@model Dio

<div class="col-sm-3 col-lg-3 col-md-3" style="margin-bottom:10px">
    <div class="card border border-secondary rounded" style="width: 22rem;">
        @{
            var base64 = Convert.ToBase64String(Model.Kategorija.Slika);
            var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
        }
        <img class="card-img-top rounded" src="@imgsrc" style="width:100%;height:150px;background-color:#ccc;padding:0 15% 0 15%" alt="Card image cap">
        @*<img  src="~/lib/logo/631695-200.png" alt="Card image cap" style="width:90%;height:100px">*@
        <div class="card-body">
            <h4 class="card-title">@Model.Naziv</h4>
            <hr />
            <p class="card-text">@Model.model.marka.Nazvi @Model.model.Naziv</p>
            <p class="card-text">Cijena : @Model.Cijena KM</p>
            <p class="button">
                <a class="btn btn-primary" id="cartButton"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-DioID="@Model.DioId">
                    Dodaj u korpu
                </a>
            </p>
        </div>
    </div>
